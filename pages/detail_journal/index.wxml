<cu-custom bgColor="custom_bar" isBack="{{true}}">
  <view slot="backText">返回</view>
  <view slot="content">期刊详情</view>
</cu-custom>
<bread-nav />
<view class="flex margin-lr-sm margin-bottom-xs paper_card">
  <view class="flex-sub padding-lr-sm padding-top">
    <text class="text-bold text-lg  text-shadow">{{fullName}}</text>
  </view>
  <view class="flex-sub padding-lr-sm padding-top-xs short_name ">
    简写：
    <text>{{shortName?shortName:'无'}}</text>
  </view>
  <view class="flex-sub padding-lr-sm padding-top-xs" bindtap="setClipboard">
    网址：
    <text class=" text-orange light  text-shadow light">https://www.baidu.com</text>
  </view>
  <view class="flex-sub flex align-center padding-lr-sm padding-bt-xs rate">
    <view class="flex-sub">
      <view class=" cu-tag line-orange radius margin-right-xs text-sm padding-xs">A级</view>
      <view class=" cu-tag line-orange radius margin-right-xs text-sm padding-xs">4区</view>
    </view>
    <view class="text-xxl padding  animation-{{animation=='shake'?'shake':''}}" bindtap="toggle" data-class="shake">
      <text class="cuIcon-favorfill text-orange" wx:if="{{isFavor}}"></text>
      <text class="cuIcon-favor  text-gray" wx:else></text>
    </view>
    <view class="text-xxl margin-right-xs">
      <text class="cuIcon-post  text-gray"></text>
    </view>
  </view>
</view>
