<cu-custom bgColor="custom_bar">
  <view class="text-bold" slot="content">Dr.</view>
</cu-custom>
<view class="journal" wx:if="{{journalList}}">
  <view class="cu-bar search bg-white fixed" style="top:{{CustomBar}}px">
    <view class="search-form round">
      <text class="cuIcon-search"></text>
      <input type="text" placeholder="请输入正确的期刊全称" confirm-type="search" bindinput="inputgetName" bindconfirm="goJournalDetail" data-target="Modal" data-keywords='keywords' value='{{keywords}}'></input>
    </view>
    <view class="action">
      <button class="cu-btn  bg-orange light shadow-blur round" bindtap="goJournalList">搜索</button>
    </view>
    <view class="cu-modal  searchPanel {{modalName=='Modal'?'show':''}} " bindtap="hideModal">
      <view class="cu-dialog top-model">
        <view class="cu-list menu">
          <view class="cu-item" wx:for="{{shortcut}}" wx:key bindtap="goJournalDetail" data-id="{{item.journal_id}}">
            <view class="text-cut">{{item.fullName}}</view>
          </view>
          <view class="text-grey text-sm margin-tb-sm">{{tip}}</view>
        </view>
      </view>
    </view>
  </view>
  <view class="cu-bar bg-white hot_journal" bindtap="goJournalList">
    <view class="action border-title">
      <text class="text-xl text-bold text-cyan">热门期刊</text>
      <text class="bg-gradual-blue" style="width:3rem"></text>
    </view>
    <view class="action">
      <text class="text-cyan  text-sm">期刊列表</text>
      <text class="cuIcon-right text-cyan"></text>
    </view>
  </view>
  <block wx:for="{{journalList}}" wx:key="index">
    <navigator open-type="navigate" url="/pages/journal_detail/index?journal_id={{item.journal_id}}">
      <paper-card fullName="{{item.fullName}}" shortName="{{item.shortName}}" property="{{item.property}}" rate="{{item.rate}}" color='orange light' />
    </navigator>
  </block>
  <view class="margin-sm" style="height:1px;backgroud:#f1f1f1;"></view>
</view>
<!-- <image wx:else src="../../image/cover.jpg" class="{{journalList.length==0?'showCover':'hideCover'}}" /> -->
<view wx:else class=" flex-sub radius shadow-lg">
  <image src="https://image.weilanwl.com/gif/loading-white.gif" mode="aspectFit" class=" response" style="height:240rpx;margin-top:400rpx;"></image>
</view>