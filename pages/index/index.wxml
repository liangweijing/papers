<cu-custom bgColor="bg-gradual-blue">
  <view class="text-bold" slot="content">Dr.</view>
</cu-custom>
<view class="journal">
  <view class="cu-bar search bg-white fixed" style="top:{{CustomBar}}px">
    <view class="search-form round">
      <text class="cuIcon-search"></text>
      <input type="text" placeholder="请输入正确的期刊全称" confirm-type="search" bindinput="inputgetName" bindconfirm="goJournalDetail" data-target="Modal" data-keywords='keywords' value='{{keywords}}'></input>
    </view>
    <view class="action">
      <button class="cu-btn bg-cyan light shadow-blur round" bindtap="goJournalDetail">搜索</button>
    </view>
    <view class="cu-modal  searchPanel {{modalName=='Modal'?'show':''}} " bindtap="hideModal">
      <view class="cu-dialog top-model">
        <view class="cu-list menu">
          <view class="cu-item" wx:for="{{5}}" wx:key>
            <view class="text-cut">
              Item {{index +'请输入正确的期刊全称 Action Hshisli Slkdls 的期刊全称 Action Hshisli'}}
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
  <view class="cu-bar bg-white hot_journal">
    <view class="action border-title">
      <text class="text-xl text-bold text-blue">热门期刊</text>
      <text class="bg-gradual-blue" style="width:3rem"></text>
    </view>
    <view class="action" bindtap="goJournalList">
      <text class="text-cyan  text-sm">更多</text>
      <text class="cuIcon-right text-cyan"></text>
    </view>
  </view>
  <block wx:for="{{journalList}}" wx:key="index">
    <paper-card fullName="{{item.fullName}}" shortName="{{item.shortName}}" property="{{item.property}}" rate="{{item.rate}}" color='cyan light'></paper-card>
  </block>
</view>